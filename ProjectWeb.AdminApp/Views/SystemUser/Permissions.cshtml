@model ProjectWeb.Models.SystemUsers.RoleAssignRequest

@{
    ViewData["Title"] = "Permissions";
}




<div class="container-fluid px-4">
    <h1 class="mt-4">Phân quyền người dùng</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
        <li class="breadcrumb-item active">Phân quyền người dùng</li>
    </ol>

    <div class="card mb-4">
        <div class="card-header">
            <button type="button" class="btn btn-success" asp-action="Create" asp-controller="SystemUser"> Tạo mới</button>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="Permissions">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="ID" />
                        @for (var i = 0; i < Model.Roles.Count; i++)
                        {
                            <div class="form-group">
                                <label>
                                    @Model.Roles[i].Name
                                    <input type="checkbox" asp-for="Roles[i].Selected" />
                                    <input type="hidden" asp-for="Roles[i].ID" />
                                    <input type="hidden" asp-for="Roles[i].Name" />

                                </label>
                                
                            </div>
                        }

                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

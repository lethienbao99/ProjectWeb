@using ProjectWeb.Models.CommonModels;
@model PageResultModel<ProjectWeb.Models.Products.ProductModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div id="PlaceHolderHere"></div>
<div class="container-fluid px-4">

    <h1 class="mt-4">DS sản phẩm</h1>

    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
        <li class="breadcrumb-item active">DS sản phẩm</li>
    </ol>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <a asp-action="Create" asp-controller="Product" class="btn btn-success btn-icon-split">
                <span class="icon text-white-50">
                    <i class="fas fa-check"></i>
                </span>
                <span class="text">Tạo mới</span>

            </a>

            <form class="d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0 mw-100 navbar-search" asp-action="Index" method="get">
                <div class="input-group">
                    <input type="text" class="form-control bg-light border-0 small" placeholder="Search for..."
                           aria-label="Search" aria-describedby="basic-addon2" name="keyword" value="@ViewBag.Keyword">
                    <div class="input-group-append">
                        <button class="btn btn-primary" type="submit">
                            <i class="fas fa-search fa-sm"></i>
                        </button>

                    </div>
                        
                </div>
            </form>

            <form class="d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0 mw-100 navbar-search">
                <div class="input-group">
                    <select class="form-control"style="width:200px;" name="categoryId" asp-items="@ViewBag.Categories" onchange="this.form.submit()">
                        <option>Vui lòng chọn</option>
                        
                    </select>
                </div>
            </form>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>
                                Username
                            </th>
                            <th>
                                Code
                            </th>
                            <th>
                                Description
                            </th>
                            <th>
                                Stock
                            </th>
                            <th>
                                Price
                            </th>
                            <th>
                                Status
                            </th>
                            <th>
                                Sort
                            </th>
                            <th>
                                DateCreated
                            </th>

                            <th></th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model.Items)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ProductName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Code)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Description)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Stock)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Price)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Status)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Sort)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DateCreated)
                                </td>

                                <td>
                                    <a href="@Url.Action("Edit", "Product",  new { id = item.ID })" class="btn btn-warning btn-circle btn-sm">
                                        <i class="bi bi-pencil-fill"></i>
                                    </a>

                                    <a href="@Url.Action("Details", "Product",  new { id = item.ID })" class="btn btn-info btn-circle btn-sm">
                                        <i class="fas fa-info-circle"></i>
                                    </a>

                                    <button type="button" class="btn btn-danger btn-circle btn-sm" data-toggle="modal" data-target="#exampleModalCenter"
                                            data-url="@Url.Action($"Delete/{item.ID}")">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                    
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            @await Component.InvokeAsync("Page", Model)

        </div>
    </div>

</div>

<!-- /.container-fluid -->

<script src="/js/service/UserService.js"></script>


